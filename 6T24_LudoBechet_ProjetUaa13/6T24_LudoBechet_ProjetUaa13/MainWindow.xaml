<Window x:Class="_6T24_LudoBechet_ProjetUaa13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_6T24_LudoBechet_ProjetUaa13"
        
        
        Title="Game of cards">
    <Grid Background="Black" >
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            
            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>



        <TextBlock Grid.Column="0" Grid.Row="4" VerticalAlignment="Bottom" FontWeight="Bold" FontFamily="Lucida Calligraphy" Text="Créé et imagnié par Ludo Bechet ET Louka Constant" FontSize="15" Foreground="AliceBlue"></TextBlock>

        <Button Grid.Column="0" FontFamily="Lucida Calligraphy" Click="CarteButton_Click" x:Name="carte" Margin="1"  Height="100" Foreground="red" Background="LightGoldenrodYellow" FontStyle="Italic" FontSize="30" FontWeight="Bold" Content="CARTE" HorizontalAlignment="Stretch" VerticalAlignment="Top" ></Button>
        <Button Grid.Column="1" FontFamily="Lucida Calligraphy" Click="Commencer_Click" x:Name="commencer" Margin="1"  Height="100"  Foreground="red"  Background="LightGoldenrodYellow" FontStyle="Italic" FontSize="30" FontWeight="Bold" Content="COMMENCER" HorizontalAlignment="Stretch" VerticalAlignment="Top"  ></Button>
        <Button Grid.Column="2" FontFamily="Lucida Calligraphy" Click="RegleButton_Click" x:Name="regle" Margin="1"  Height="100" Foreground="red" Background="LightGoldenrodYellow" FontStyle="Italic" FontSize="30" FontWeight="Bold" Content="REGLE" HorizontalAlignment="Stretch" VerticalAlignment="Top"></Button>
        <Button Grid.Column="3" FontFamily="Lucida Calligraphy" Click="ParametreButton_Click" x:Name="parametre" Margin="1"  Height="100" Foreground="red" Background="LightGoldenrodYellow" FontStyle="Italic" FontSize="30" FontWeight="Bold" Content="PARAMETRE" HorizontalAlignment="Stretch" VerticalAlignment="Top"></Button>
        


        <Image Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1"  Source="H:\UAA-13-projet\6T24_LudoBechet_ProjetUaa13\6T24_LudoBechet_ProjetUaa13\Asset\titre.png" Height="600"  Width="500" Margin="0,0,0,0"></Image>
        
        

        <Frame Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="4" NavigationUIVisibility="Hidden" x:Name="Main" />
    </Grid>

</Window>
