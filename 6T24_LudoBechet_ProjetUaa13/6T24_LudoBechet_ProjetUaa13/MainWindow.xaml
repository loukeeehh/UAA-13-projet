<Window x:Class="_6T24_LudoBechet_ProjetUaa13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_6T24_LudoBechet_ProjetUaa13"
        
        Title="Game of cards">
    <Grid Background="Black" >
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            
        </Grid.RowDefinitions>
        




        <Button FontFamily="Lucida Calligraphy" Click="CarteButton_Click" x:Name="carte" Margin="10,0,10,0" Width="270" Height="100" Foreground="red" Background="LightGoldenrodYellow" FontStyle="Italic" FontSize="30" FontWeight="Bold" Content="CARTE" HorizontalAlignment="Left" VerticalAlignment="Top" ></Button>
        <Button FontFamily="Lucida Calligraphy" Click="Commencer_Click" x:Name="commencer" Width="300" Height="100"  Foreground="red"  Background="LightGoldenrodYellow" FontStyle="Italic" FontSize="30" FontWeight="Bold" Content="COMMENCER" HorizontalAlignment="Center" VerticalAlignment="Top"  ></Button>
        <Button FontFamily="Lucida Calligraphy" Click="ParametreButton_Click" x:Name="parametre" Margin="10,0,10,0" Width="270" Height="100" Foreground="red" Background="LightGoldenrodYellow" FontStyle="Italic" FontSize="30" FontWeight="Bold" Content="PARAMETRE" HorizontalAlignment="Right" VerticalAlignment="Top"></Button>



        <Image Grid.Row="1"  Source="///Asset/titre.png" Height="600"  Width="500" Margin="0,0,0,0"></Image>
        
        

        <Frame Grid.Row="1" NavigationUIVisibility="Hidden" x:Name="Main" />
    </Grid>

</Window>
