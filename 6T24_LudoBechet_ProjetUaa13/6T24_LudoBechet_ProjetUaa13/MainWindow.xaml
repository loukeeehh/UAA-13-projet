<Window x:Class="_6T24_LudoBechet_ProjetUaa13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_6T24_LudoBechet_ProjetUaa13"
        mc:Ignorable="d"
        Title="Game of cards" Height="730" Width="900">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        
        
        
            
            <Button  Click="CarteButton_Click" x:Name="carte" Margin="10,0,10,0" Width="270" Height="100" Foreground="red" Background="LightGoldenrodYellow" FontStyle="Italic" FontSize="20" FontWeight="Bold" Content="CARTE" HorizontalAlignment="Left" VerticalAlignment="Top" ></Button>
            <Button Click="Commencer_Click" x:Name="commencer" Width="300" Height="100"  Foreground="red"  Background="LightGoldenrodYellow" FontStyle="Italic" FontSize="20" FontWeight="Bold" Content="COMMENCER" HorizontalAlignment="Center" VerticalAlignment="Top"  ></Button>
            <Button Click="ParametreButton_Click" x:Name="parametre" Margin="10,0,10,0" Width="270" Height="100" Foreground="red" Background="LightGoldenrodYellow" FontStyle="Italic" FontSize="20" FontWeight="Bold" Content="PARAMETRE" HorizontalAlignment="Right" VerticalAlignment="Top"></Button>



        <Image Grid.Row="1" Source="H:\UAA-13-projet/titre.png" Height="530" Margin="0,0,0,0"></Image>
        
        

        <Frame Grid.Row="1" NavigationUIVisibility="Hidden" x:Name="Main" />
    </Grid>

</Window>
