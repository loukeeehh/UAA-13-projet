<Page x:Class="_6T24_LudoBechet_ProjetUaa13.Views.Plateau"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_6T24_LudoBechet_ProjetUaa13.Views"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="800"
      Title="Plateau">

    <Grid Name="grdMain" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="7" Source="H:\UAA-13-projet\plat_fond.jpg" Stretch="Fill" />
        <Rectangle Grid.Row="1" Grid.Column="1" Fill="Brown" Margin="15"></Rectangle>
        <Rectangle Grid.Row="1" Grid.Column="2" Fill="Brown" Margin="15"></Rectangle>
        <Rectangle Grid.Row="1" Grid.Column="4" Fill="Brown" Margin="15"></Rectangle>
        <Rectangle Grid.Row="1" Grid.Column="5" Fill="Brown" Margin="15"></Rectangle>
        <Rectangle Grid.Row="1" Grid.Column="6" Fill="LightYellow" Margin="15"></Rectangle>
        <Image x:Name="CartePiochée" Grid.Row="1" Grid.Column="0" Stretch="Fill" Margin="15"/>
        <Image Grid.Row="2" Grid.Column="2" Source="H:\UAA-13-projet/sword.png"></Image>
        <Image Grid.Row="2" Grid.Column="4" Source="H:\UAA-13-projet/sword.png"></Image>
        <Image Grid.Row="2" Grid.Column="5" Source="H:\UAA-13-projet/shield.png"></Image>
        <Image Grid.Row="2" Grid.Column="1" Source="H:\UAA-13-projet/shield.png"></Image>
        <Image Grid.Row="0" Grid.Column="3" Source="H:\UAA-13-projet/or.png"></Image>
        <Rectangle  Margin="10"  Fill="Gold" Grid.Column="3"></Rectangle>
        <Image Grid.Row="0" Grid.Column="3" Source="H:\uaa_13/or.png"></Image>
        <Rectangle Margin="10" Fill="Gray"></Rectangle>
        <Rectangle Grid.Column="7" Margin="10" Fill="Gray"></Rectangle>

        <StackPanel x:Name="CarteContainer" Grid.Row="1" Grid.Column="3" Orientation="Vertical"/>
        <Image Grid.Row="1" x:Name="CarteImage" Width="200" Height="300" Stretch="Uniform" />
        <TextBlock FontWeight="Bold"   FontSize="15" Foreground="Red" x:Name="MessageTextBlock" Width="200" Height="30" Text="" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <Button Content="Piocher une carte" Click="PiocherCarte_Click" Width="150" Height="40"/>





    </Grid>

</Page>

